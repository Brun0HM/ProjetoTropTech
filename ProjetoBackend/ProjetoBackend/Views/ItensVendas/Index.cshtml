@model IEnumerable<ProjetoBackend.Models.ItemVenda>

@{
    ViewData["Title"] = "Index";
    var idVendaAtual = ViewData["idVendaAtual"];
}
<div class="container">
    <p class="titulo-cliente fw-bold">Clientes</p>

    <form asp-action="Search" class="search-container text-end" method="get">
        <input type="text" name="nome" placeholder="Buscar cliente..." class="search-input" />
        <button type="submit" class="search-button"><ion-icon name="search"></ion-icon></button>
    </form>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Venda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.VendaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ItemVendaId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ItemVendaId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ItemVendaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
