@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <!-- Espaço vazio -->
        <div class="col-12 col-md-1 col-lg-2"> </div>


        <div class="col-12 col-md">
            <div class="row">
                <div class="col">
                    <p class="titulo-criar fw-bold">Clientes</p>
                    <hr class="border border-dark border-1">
                    <h4 class="cadastro fw-medium ">Excluir Cliente</h4>
                </div>
            </div>

            <div class="row">
                <div class="titulodelete fw-bold col-2 mb-3">@Html.DisplayNameFor(model => model.Nome):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.Nome)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.Email):</div>
                <div class="conteudodelete col">@Model.Email</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.CnpjCpf):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.CnpjCpf)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.Celular):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.Celular)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.DataNascimento):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.DataNascimento)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-5">@Html.DisplayNameFor(model => model.CadastroAtivo):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.CadastroAtivo)</div>
            </div>

            <div class="row">
                <div class="col col-md-6 mt-4 p-0 form-group">
                    <input type="submit" value="Excluir" class=" botaocriar fw-semibold" />
                </div>

                <div class="col col-md-6 mt-4 d-flex p-0 justify-content-end">
                    <a class="botaocancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                </div>
            </div>



        </div>

        <!-- Espaço vazio -->
        <div class="col-12 col-md-1 col-lg-2"> </div>

    </div>
</div>
