@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h1 class="cadastro fw-bold">Categoria</h1>
    <hr class="border border-dark border-1">
    @model ProjetoBackend.Models.Categoria

    <h4 class="cadastro">Cadastro de Categoria</h4>

    <div class="row">

        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-box-container mb-2 form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col col-md-6 mt-4 form-group">
                        <input type="submit" value="Criar" class="btn botao-criar fw-semibold" />
                    </div>

                    <div class="col col-md-6 mt-4 d-flex justify-content-end">
                        <a class="botaocancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>